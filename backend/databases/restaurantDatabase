// models/dataModel.js

const mongoose = require('mongoose');
const Comment = require('./commentDatabase')

const restaurantData = new mongoose.Schema({
  name: {
    type: String,
    required: true,
  },
  address: {
    type: String,
    required: true,
  },
  website: {
   type: String,
   required: true
  },
  phone: { 
    type: String,
    required: true
  },
  image_link: {
   type: String,
   required: true
  },
  tags: {
    type: [String], //array of strings
  },
  comments: [{
  type: Comment.schema
  }],
  rating_total: {
    type: Number
  },
  rating_count: {
    type: Number
  },
  ratings: {
    type: Map,
    of: Number
  },
  phone: {
    type: String,
    required: true
  }
});

const restaurantInfo = mongoose.model('restaurantInfo', restaurantData);

module.exports = restaurantInfo;