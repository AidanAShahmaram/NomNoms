// models/dataModel.js

const mongoose = require('mongoose');
const Restaurant = ('./restaurantDatabase')

const ownerData = new mongoose.Schema({
  username: {
    type: String,
    required: true,
  },
  password: {
    type: String,
    required: true,
  },
  restaurant: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'Restaurant'
  },
  phone: {
  type: string,
  required: true
  },
  website: {
  type: string,
  required: true
  },
  image_link: {
  type: string,
  required: true
  }
});

const ownerInfo = mongoose.model('ownerInfo', ownerData);

module.exports = ownerInfo;